{
    "description": "Distributed Docker Volume System",
    "documentation": "https://github.com/b4rti/ddvs",
    "entrypoint": ["/bin/ddvs"],
    "interface": {
      "socket": "ddvs.sock",
      "types": ["docker.volumedriver/1.0"]
    },
    "linux": {
      "capabilities": [
          "CAP_SYS_ADMIN"
        ]
    },
    "mounts": [
      {
        "destination": "/run/docker.sock",
        "options": ["rbind"],
        "name": "state",
        "source": "/run/docker.sock",
        "settable": ["source"],
        "type": "bind"
      }
    ],
    "network": {
      "type": "host"
    }
  }